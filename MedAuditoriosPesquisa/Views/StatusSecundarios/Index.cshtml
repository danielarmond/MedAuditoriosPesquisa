@model IEnumerable<MedAuditoriosPesquisa.Models.StatusSecundario>

@{
    ViewData["Title"] = "Status Scundário";
    Layout = "~/Pages/Shared/_Layout.cshtml";

}

<h1>Status Secundário</h1>

<div class="col-3">
    <a class="btn btn-success" a asp-action="Create">Criar Novo</a>
</div>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Nome)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Nome)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id">Editar</a> |
                <a asp-action="Delete" asp-route-id="@item.Id">Deletar</a>
            </td>
        </tr>
}
    </tbody>
</table>
