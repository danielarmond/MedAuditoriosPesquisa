@model MedAuditoriosPesquisa.Models.ViewModels.StatusSecundarioFormViewModel

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Pages/Shared/_Layout.cshtml";

}


<h3>Editar</h3>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="StatusSecundario.Id" />
            <div class="form-group">
                <label asp-for="StatusSecundario.Nome" class="control-label"></label>
                <input asp-for="StatusSecundario.Nome" class="form-control" />
                <span asp-validation-for="StatusSecundario.Nome" class="text-danger"></span>
            </div>
            <div style="width:500px;">
                <a asp-action="Index" value="Cancelar" class="btn btn-danger" style="margin:5px;" />Cancelar</a>
                <input type="submit" value="Salvar" class="btn btn-primary" style="margin:5px;" />
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
